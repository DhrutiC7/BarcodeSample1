<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.symbol.barcodesample1.ReReceive">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

    <LinearLayout
        android:id="@+id/transferLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="#ffffff" />

        <LinearLayout
            android:id="@+id/DetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/custom_outer_border"
            android:visibility="gone">

            <TextView
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:text="Details"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D4D4D4"
                android:text="" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="DATE"
                    android:textColor="#A29F9F"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/shift"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="SHIFT"
                    android:textColor="#A29F9F"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dateData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/shiftData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:textSize="13sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/allocatedRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="ALLOCATED ROW NO."
                    android:textColor="#A29F9F"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/allocatedRowData"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text=""
                    android:textSize="13sp"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="SCANNED BARCODE DATA"
            android:textColor="#A29F9F"
            android:textSize="12sp"/>


        <LinearLayout
            android:id="@+id/scannedDataLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/custom_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productNameLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="PRODUCT TYPE"
                    android:textColor="#A29F9F"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/productNameData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text=""
                    android:textSize="13sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productCodeLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="PRODUCT CODE"
                    android:textColor="#A29F9F"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/productCodeData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text=""
                    android:textSize="13sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reasonLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Standard Reason"
                android:textColor="#A29F9F"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/supervisorLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Select Re-Receive Supervisor"
                android:textColor="#A29F9F"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/reasonSelection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:drawable/btn_dropdown"
                android:dropDownWidth="400dp"
                android:padding="0dp"
                android:paddingLeft="2dp"
                android:spinnerMode="dropdown" />


            <Spinner
                android:id="@+id/supervisorSelection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:drawable/btn_dropdown"
                android:dropDownWidth="400dp"
                android:padding="0dp"
                android:paddingLeft="2dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/storageLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Select Storage"
                android:textColor="#A29F9F"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/regionLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Select Region"
                android:textColor="#A29F9F"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/storageSelection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:drawable/btn_dropdown"
                android:dropDownWidth="400dp"
                android:padding="0dp"
                android:paddingLeft="2dp"
                android:spinnerMode="dropdown" />


            <Spinner
                android:id="@+id/regionSelection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:drawable/btn_dropdown"
                android:dropDownWidth="400dp"
                android:padding="0dp"
                android:paddingLeft="2dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/remarkLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/remarkLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REMARK"
                android:textColor="#A29F9F"
                android:visibility="gone"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/remarkData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/custom_border"
                android:hint="Enter Remark"
                android:inputType="text"
                android:paddingBottom="8dp"
                android:paddingLeft="5dp"
                android:visibility="gone"
                android:paddingTop="8dp"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/stockButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/reReceiveStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0865B3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="START RE-RECEIVE"
                android:textColor="#ffffff"
                android:onClick="startReReceive"/>

            <LinearLayout
                android:id="@+id/stockHButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0865B3"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginRight="15dp"
                    android:text="CANCEL"
                    android:textColor="#ffffff"
                    android:visibility="gone"
                    android:onClick="cancelReReceive"/>

                <Button
                    android:id="@+id/reReceiveStop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0865B3"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="STOP RE-RECEIVE"
                    android:textColor="#ffffff"
                    android:visibility="gone"
                    android:onClick="stopReReceive"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>