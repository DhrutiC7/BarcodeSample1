            <TextView
                android:id="@+id/storagelabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Select Storage"
                android:textColor="#A29F9F"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/regionLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Select Region"
                android:textColor="#A29F9F"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/storageSelection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:drawable/btn_dropdown"
                android:dropDownWidth="400dp"
                android:padding="0dp"
                android:paddingLeft="2dp"
                android:spinnerMode="dropdown" />


            <Spinner
                android:id="@+id/regionSelection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:drawable/btn_dropdown"
                android:dropDownWidth="400dp"
                android:padding="0dp"
                android:paddingLeft="2dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stockButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/stockStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0865B3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="START STOCK"
                android:textColor="#ffffff"
                android:onClick="startStock"/>

            <LinearLayout
                android:id="@+id/stockHButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">
            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0865B3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginRight="15dp"
                android:text="CANCEL"
                android:textColor="#ffffff"
                android:visibility="gone"
                android:onClick="cancelStock"/>

            <Button
                android:id="@+id/stockStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0865B3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="STOP STOCK"
                android:textColor="#ffffff"
                android:visibility="gone"
                android:onClick="stopStock"/>
            </LinearLayout>

        </LinearLayout>
