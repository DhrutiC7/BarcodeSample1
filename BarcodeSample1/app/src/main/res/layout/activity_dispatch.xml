            <TextView
                android:id="@+id/scannedLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="SCANNED BARCODE DATA"
                android:textColor="#A29F9F"
                android:textSize="12sp" />

